# Supabase (REST API for both DB and Storage)
SUPABASE_URL=your.url.com
SUPABASE_SERVICE_KEY=your-service-role-key

# Storage bucket name
S3_BUCKET=files

# Source paths to sync (comma-separated, container-internal paths)
# Example: /data/documents,/data/images
SYNC_SOURCE_PATHS=/data/test

# Sync interval in seconds (default: 900 = 15 minutes)
SYNC_INTERVAL=900

# Number of worker threads (default: 6, adjust for your NAS CPU)
# DS923+: 4-6 workers recommended
SYNC_WORKERS=6

# Logging
LOG_LEVEL=INFO
BETTERSTACK_SOURCE_TOKEN=
BETTERSTACK_INGEST_HOST=

# Timezone
TIMEZONE=Europe/Berlin
