# Database connection
PG_DSN=postgresql://user:password@host:5432/database

# S3/Supabase Storage connection (for rclone)
S3_ENDPOINT=https://your-project.supabase.co/storage/v1/s3
S3_ACCESS_KEY=your-access-key
S3_SECRET_KEY=your-secret-key
S3_BUCKET=files
S3_REGION=eu-central-1

# Source paths to sync (comma-separated, absolute paths)
SYNC_SOURCE_PATHS=/volume1/projects,/volume1/documents

# Sync interval in seconds (default: 900 = 15 minutes)
SYNC_INTERVAL=900

# Betterstack logging
BETTERSTACK_SOURCE_TOKEN=
BETTERSTACK_INGEST_HOST=

# Log level
LOG_LEVEL=INFO

# Timezone
TIMEZONE=Europe/Berlin

